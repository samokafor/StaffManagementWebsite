@{
    ViewData["Title"] = "Staff Profile";
    string imageUrl = "https://robohash.org/" + @Model.FirstName + "?size=500x500&set=set3";
}

<style>
    .bg-image {
        background-image: url('https://th.bing.com/th/id/R.39ee609d2381b1246bf0580f7740f69f?rik=uWfvRen2526XBQ&riu=http%3a%2f%2fak3.picdn.net%2fshutterstock%2fvideos%2f3644588%2fthumb%2f1.jpg%3fi10c%3dimg.resize(height%3a160)&ehk=3lzP8SotVUTHlmAYI2IFXcwlchIBkTqXudwQSLUHtww%3d&risl=&pid=ImgRaw&r=0');
        background-size: cover;
        background-position: center;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .bg-overlay {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
</style>

<div class="bg-image"></div>
<div class="bg-overlay"></div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light mt-4"><span>@Model.FirstName @Model.LastName</span>'s Profile</h3>
                    <p class="text-center font-weight-light mb-4">ID No: @Model.Id</p>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <img src=@imageUrl class="rounded-circle bordered w-25 border-8 img-responsive" alt="Profile Picture" />
                    </div>
                    <div class="mt-2">
                        <h5 class="text-center">@Model.FirstName @Model.LastName</h5>
                        <p class="text-center mt-1">Age: @Model.Age</p>
                        <p class="text-center mt-1 text-sm-center">ID: @Model.Id</p>

                    </div>
                </div>
                <div class="card-footer text-center">
                    <div class="btn-group" role="group" aria-label="Profile Actions">
                        <a asp-controller="Staff" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary mx-1">Edit Profile</a>
                        <a asp-controller="Staff" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger mx-1">Delete Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
